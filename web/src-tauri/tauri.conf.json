{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CheersAI",
  "version": "1.12.0",
  "identifier": "com.cheersai.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "echo 'Please ensure dev server is running on port 3000'",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "CheersAI Desktop - 智享AI，安全随行",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
